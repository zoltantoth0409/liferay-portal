<?xml version="1.0"?>
<!DOCTYPE project>

<project>
	<path id="rest.builder.classpath">
		<fileset
			dir="../lib"
			includes="*.jar"
		/>
		<fileset
			dir="../../../../tools/sdk/dist"
			includes="com.liferay.portal.tools.rest.builder-*.jar"
		/>
	</path>

	<taskdef
		classpathref="rest.builder.classpath"
		resource="com/liferay/portal/tools/rest/builder/ant/taskdefs.properties"
	/>

	<target name="build-rest">
		<build-rest
			apiDirName="../sample-api/src/main/java"
			apiPackagePath="com.example.sample"
			author="John Doe"
			inputFileName="rest.yaml"
		/>
	</target>
</project>