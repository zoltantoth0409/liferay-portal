<?xml version="1.0"?>
<!DOCTYPE project>

<project>
	<taskdef resource="com/liferay/css/builder/ant/taskdefs.properties" />

	<target name="build-css">
		<build-css
			baseDir="${build.css.base.dir}"
			dirNames="${build.css.dir.names}"
			generateSourceMap="${build.css.generate.source.maps}"
			importDir="${build.css.import.dir}"
			outputDirName="${build.css.output.dir.name}"
			precision="${build.css.precision}"
			rtlExcludedPathRegexps="${build.css.rtl.excluded.path.regexps}"
			sassCompilerClassName="${build.css.sass.compiler.class.name}"
		/>
	</target>
</project>