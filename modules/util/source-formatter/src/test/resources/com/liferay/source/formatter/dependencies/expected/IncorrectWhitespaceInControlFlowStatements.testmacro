	macro TestControlFlowStatementsFormat {

		// If statement

		if ((IsElementPresent(locator1 = "Blogs#ADD_BLOGS_ENTRY")) &&
			("${check}" == "true") &&
			("${check}" == "true")) {

			Alert.viewSuccessMessage();
		}

		// If else statement

		if ("${check}" == "true") {
			Alert.viewSuccessMessage();
		}
		else if ("${check}" == "false") {
			Alert.viewRequiredField();
		}
		else {
			Alert.viewRequestFailedToComplete();
		}

		if ("${check}" == "true") {
			Alert.viewSuccessMessage();
		}
		else if ("${check}" == "false") {
			Alert.viewRequiredField();
		}
		else {
			Alert.viewRequestFailedToComplete();
		}

		if ("${check}" == "true") {
			Alert.viewSuccessMessage1();
		}
		else if ("${check}" == "false") {
			Alert.viewRequiredField1();
		}
		else {
			Alert.viewRequestFailedToComplete1();
		}

		if ("${check}" == "true") {
			Alert.viewSuccessMessage2();
		}
		else if ("${check}" == "false") {
			Alert.viewRequiredField2();
		}
		else {
			Alert.viewRequestFailedToComplete2();
		}

		// While statement

		while (!("${i}" == "${propertyNumber}")) {
			var i = MathUtil.sum("${i}", "1");
		}

		while (!("${i}" == "${propertyNumber}")) {
			var i = MathUtil.sum("${i}", "1");
		}

		// For statement

		for (var row : table "${rawTable}") {
			TableEcho.echoTwoVars(
				v0 = "${row[0]}",
				v1 = "${row[1]}");
		}

		for (var row : table "${rawTable}") {
			TableEcho.echoTwoVars(
				v0 = "${row[0]}",
				v1 = "${row[1]}");
		}

		// Task statement

		task ("Task1") {
			echo("## Task1");
		}

		task ("Task2") {
			echo("## Task2");
		}
	}

