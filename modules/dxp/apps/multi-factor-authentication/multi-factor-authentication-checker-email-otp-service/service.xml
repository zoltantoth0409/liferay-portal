<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder auto-import-default-references="false" auto-namespace-tables="false" mvcc-enabled="true" package-path="com.liferay.multi.factor.authentication.checker.email.otp">
	<author>Arthur Chan</author>
	<namespace>MFAEmailOTP</namespace>
	<entity local-service="true" name="EmailOTPEntry" remote-service="false" table="MFAEmailOTPEntry">

		<!-- PK fields -->

		<column name="entryId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="failedAttempts" type="int" />
		<column name="lastFailDate" type="Date" />
		<column name="lastFailIP" type="String" />
		<column name="lastSuccessDate" type="Date" />
		<column name="lastSuccessIP" type="String" />

		<!-- Finder methods -->

		<finder name="UserId" return-type="EmailOTPEntry" unique="true">
			<finder-column name="userId" />
		</finder>

		<!-- References -->

		<reference entity="User" package-path="com.liferay.portal" />
	</entity>
</service-builder>