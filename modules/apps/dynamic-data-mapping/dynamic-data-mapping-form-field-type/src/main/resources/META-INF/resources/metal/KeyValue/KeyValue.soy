{namespace KeyValue}

{template .render}
	{@param name: string}
	{@param? _handleKeywordInputBlurred: any}
	{@param? _handleKeywordInputChanged: any}
	{@param? _handleValueInputBlurred: any}
	{@param? _handleValueInputEdited: any}
	{@param? _handleValueInputFocused: any}
	{@param? _keyword: string}
	{@param? _value: string}
	{@param? id: string}
	{@param? label: string}
	{@param? placeholder: string}
	{@param? readOnly: bool}
	{@param? repeatable: bool}
	{@param? required: bool}
	{@param? showLabel: bool}
	{@param? spritemap: string}
	{@param? tip: string}

	{call FieldBase.render}
		{param contentRenderer kind="html"}
			{call .content}
				{param _handleKeywordInputBlurred: $_handleKeywordInputBlurred /}
				{param _handleKeywordInputChanged: $_handleKeywordInputChanged /}
				{param _handleValueInputBlurred: $_handleValueInputBlurred /}
				{param _handleValueInputEdited: $_handleValueInputEdited /}
				{param _handleValueInputFocused: $_handleValueInputFocused /}
				{param _keyword: $_keyword /}
				{param _value: $_value /}
				{param id: $id /}
				{param name: $name /}
				{param placeholder: $placeholder /}
				{param readOnly: $readOnly /}
				{param required: $required /}
				{param showLabel: $showLabel /}
				{param spritemap: $spritemap /}
			{/call}
		{/param}

		{param tip: $tip /}
		{param id: $id /}
		{param label: $label /}
		{param repeatable: $repeatable /}
		{param required: $required /}
		{param showLabel: $showLabel /}
		{param spritemap: $spritemap /}
	{/call}
{/template}

{template .content}
	{@param name: string}
	{@param? _handleKeywordInputBlurred: any}
	{@param? _handleKeywordInputChanged: any}
	{@param? _handleValueInputBlurred: any}
	{@param? _handleValueInputEdited: any}
	{@param? _handleValueInputFocused: any}
	{@param? _keyword: string}
	{@param? _value: string}
	{@param? placeholder: string}
	{@param? readOnly: bool}
	{@param? required: bool}
	{@param? showLabel: bool}
	{@param? spritemap: string}

	{call Text.render}
		{param events: [
			'fieldBlurred': $_handleValueInputBlurred,
			'fieldEdited': $_handleValueInputEdited,
			'fieldFocused' : $_handleValueInputFocused
		] /}
		{param name: 'keyValueLabel' + $name /}
		{param placeholder: $placeholder /}
		{param readOnly: $readOnly /}
		{param ref: 'keyValueLabel' + $name /}
		{param required: $required /}
		{param showLabel: $showLabel /}
		{param spritemap: $spritemap /}
		{param value: $_value /}
	{/call}

	<div class="active form-text key-value-editor">
		<label class="control-label key-value-label">Field Name:</label>

		<input
			class="key-value-input"
			data-onblur="{$_handleKeywordInputBlurred}"
			data-oninput="{$_handleKeywordInputChanged}"
			type="text"
			value="{$_keyword}"
		/>
	</div>
{/template}