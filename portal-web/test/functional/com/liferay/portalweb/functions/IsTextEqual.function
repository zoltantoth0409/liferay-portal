@default = "isTextEqual"
definition {
	function isText {
		WaitForSPARefresh();

		selenium.waitForElementPresent();

		selenium.waitForVisible();

		selenium.isText();
	}

	function isTextEqual {
		WaitForSPARefresh();

		if (contains("${locator1}", "/input")) {
			IsTextEqual.isValue();
		}
		else {
			IsTextEqual.isText();
		}
	}

	function isValue {
		WaitForSPARefresh();

		selenium.waitForElementPresent();

		selenium.waitForVisible();

		selenium.isValue();
	}
}