			portlet = "User Groups");

		UserGroup.viewCP(userGroupName = "UG UserGroup1 Name");

		UserGroup.viewCP(userGroupName = "UG UserGroup2 Name");

		UserGroup.viewCP(userGroupName = "UG UserGroup3 Name");
	}

