			portlet = "Custom Fields"
		);

		CustomFields.addCP(
			customFieldName = "Boolean",
			customFieldType = "True/False",
			resourceName = "User"
		);

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "Custom Fields"
		);

		CustomFields.editCP(
			customFieldName = "Boolean",
