		Portlet.addPG(portletName = "Test Localized Portlet");

		AssertClick(
			locator1 = "TestLocalized#SPANISH_LOCALIZATION",
			value1 = "Spanish");

		AssertVisible(locator1 = "TestBlob#TEST_PORTLET_BODY_PASSED");

		AssertTextNotPresent(value1 = "FAILED");
	}

}