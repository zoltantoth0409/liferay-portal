@component-name = "portal-upgrades"
definition {
	property app.server.types = "jboss,resin,tcserver,tomcat,weblogic,websphere,wildfly";
	property database.types = "db2,mariadb,mysql,oracle,postgresql,sqlserver,sybase";
	property portal.release = "true";
	property portal.upstream = "true";
	property ignore.errors = "Plugin security management is not enabled. Enable a security manager, then restart.";
	property testray.main.component.name = "Upgrades Foundation";

	setUp {
		SignIn.signIn();

		Smoke.viewWelcomePage();

		Upgrade.reindexSearches();
	}

	@priority = "5"
	test ViewPortalSmokeArchive612 {
		property data.archive.type = "data-archive-portal";
		property database.types = "mariadb,mysql,postgresql";
		property portal.upgrades = "true";
		property portal.version = "6.1.2";
		property test.assert.warning.exceptions = "true";

		Upgrade.viewUpgrade();

		Upgrade.searchForAssetsAfterUpgrade();
	}

