<definition component-name="portal-search-ee">
	<property name="osgi.app.includes" value="portal-search-elasticsearch6" />
	<property name="osgi.module.configuration.file.names" value="com.liferay.portal.bundle.blacklist.internal.BundleBlacklistConfiguration.config" />
	<property name="osgi.module.configurations" value="blacklistBundleSymbolicNames=&quot;com.liferay.portal.mobile.device.detection.fiftyonedegrees.api,com.liferay.portal.mobile.device.detection.fiftyonedegrees.enterprise,com.liferay.portal.mobile.device.detection.fiftyonedegrees.enterprise.test.data,com.liferay.portal.mobile.device.detection.fiftyonedegrees,com.liferay.portal.search.elasticsearch,com.liferay.portal.search.elasticsearch.shield,com.liferay.portal.search.elasticsearch.shield.fragment,com.liferay.portal.search.elasticsearch.marvel.web&quot;" />
	<property name="portal.release" value="true" />
	<property name="portal.suite.search.engine" value="elasticsearch6" />
	<property name="portal.upstream" value="true" />
	<property name="test.run.environment" value="EE" />
	<property name="testray.main.component.name" value="Elastic Search Impl" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<var method="PropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="MessageboardsThread#tearDownCP" />

				<execute macro="DMDocument#tearDownCP" />

				<execute macro="Page#tearDownPG" />
			</else>
		</if>
	</tear-down>

	<command ignore="true" name="EmbeddedClusterSmokeTest" priority="3">
		<description message="This test asserts Elasticsearch clustering to add/remove replicas as nodes are added/removed from the portal cluster. Also, we want to maintain no loss in search functionality as replicas are being added or removed." />

		<property name="app.server.bundles.size" value="1" />
		<property name="cluster.enabled" value="true" />
		<property name="test.name.skip.portal.instance" value="Elasticsearch6EE#EmbeddedClusterSmokeTest" />

		<!-- Verify the total number of Elasticsearch replicas is two as there are two nodes/bundles running -->

		<!-- LPS-67744 -->

		<!--<execute macro="Elasticsearch#viewClusterStatusViaClusterHealthAPI">
			<var name="numberOfNodes" value="2" />
		</execute>-->

		<!--<execute macro="Elasticsearch#viewReplicaAddedInConsole" />-->

		<!--<execute macro="Navigator#openURL" />-->

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Message Boards" />
		</execute>

		<execute macro="MessageboardsThread#addCP">
			<var name="threadBody" value="Orange" />
			<var name="threadSubject" value="Apple" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Documents and Media" />
		</execute>

		<execute macro="DMDocument#addCP">
			<var name="dmDocumentDescription" value="Orange" />
			<var name="dmDocumentFile" value="Document_1.txt" />
			<var name="dmDocumentTitle" value="Apple" />
		</execute>

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Configuration" />
			<var name="panel" value="Control Panel" />
			<var name="portlet" value="Server Administration" />
		</execute>

		<execute macro="ServerAdministration#executeServerResourcesActions">
			<var name="actionsDescription" value="Reindex all search indexes." />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Apple" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Orange" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>

		<execute macro="Portlet#shutdownSpecificServer">
			<var name="nodePort" value="9" />
		</execute>

		<!-- Verify the total number of Elasticsearch replicas has decreased to one -->

		<!-- LPS-67744 -->

		<!-- <execute macro="Elasticsearch#viewReplicaRemovedInConsole" /> -->

		<!-- <execute macro="Elasticsearch#viewClusterStatusViaClusterHealthAPI">
			<var name="numberOfNodes" value="1" />
		</execute> -->

		<!-- Verify search functionality after a replica has been removed -->

		<execute macro="Navigator#openURL" />

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Apple" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Orange" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>
	</command>

	<command name="PortalClusterSmokeTest" priority="5">
		<property name="app.server.bundles.size" value="1" />
		<property name="cluster.enabled" value="true" />
		<property name="remote.elasticsearch.enabled" value="true" />
		<property name="test.name.skip.portal.instance" value="Elasticsearch6EE#PortalClusterSmokeTest" />

		<execute macro="Elasticsearch#viewClusterStatusViaClusterHealthAPI">
			<var name="numberOfNodes" value="1" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Message Boards" />
		</execute>

		<execute macro="MessageboardsThread#addCP">
			<var name="threadBody" value="Orange" />
			<var name="threadSubject" value="Apple" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Content" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Documents and Media" />
		</execute>

		<execute macro="DMDocument#addCP">
			<var name="dmDocumentDescription" value="Orange" />
			<var name="dmDocumentFile" value="Document_1.txt" />
			<var name="dmDocumentTitle" value="Apple" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Apple" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Orange" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>

		<execute macro="User#logoutPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" value="test@liferay.com" />
		</execute>

		<execute macro="User#loginPG">
			<var name="nodePort" value="9080" />
			<var name="password" value="test" />
			<var name="userEmailAddress" value="test@liferay.com" />
		</execute>

		<execute macro="Portlet#shutdownSpecificServer">
			<var name="nodePort" value="8" />
		</execute>

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Apple" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>

		<execute macro="Navigator#openSpecificURL">
			<var name="url" value="http://localhost:9080" />
		</execute>

		<execute macro="SearchPortlet#searchPG">
			<var name="searchTerm" value="Orange" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Document" />
		</execute>

		<execute macro="SearchPortlet#viewSearchResultsPG">
			<var name="searchAssetTitle" value="Apple" />
			<var name="searchAssetType" value="Message Boards Message" />
		</execute>
	</command>

	<command name="XPackSmokeTest" priority="5">
		<property name="elastic.xpack.enabled" value="true" />
		<property name="osgi.modules.includes" value="portal-search-elasticsearch6-xpack-monitoring,portal-search-elasticsearch6-xpack-security" />
		<property name="remote.elasticsearch.enabled" value="true" />
		<property name="test.name.skip.portal.instance" value="Elasticsearch6EE#XPackSmokeTest" />

		<execute macro="Page#add">
			<var name="pageName" value="X-Pack Monitoring Page" />
		</execute>

		<execute macro="SitePageNavigator#gotoEditPage">
			<var name="page" value="X-Pack Monitoring Page" />
		</execute>

		<execute macro="Page#editPageLayoutColumn">
			<var name="columnName" value="1 Column" />
		</execute>

		<execute macro="Navigator#gotoPage">
			<var name="pageName" value="X-Pack Monitoring Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="X-Pack Monitoring" />
		</execute>

		<execute macro="XPackMonitoring#viewPG" />

		<execute macro="User#logoutPG" />

		<execute macro="Navigator#gotoPage">
			<var name="pageName" value="X-Pack Monitoring Page" />
		</execute>

		<execute macro="XPackMonitoring#viewAsGuestPG" />
	</command>
</definition>