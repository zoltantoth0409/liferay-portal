@component-name = "portal-plugins-deployment"
definition {

	property testray.main.component.name = "Plugin Installer";

	setUp {
		User.firstLoginPG();

		ProductMenu.gotoPortlet(
			category = "Site Builder",
			panel = "Site Administration",
			portlet = "Pages");

		SitePages.addPublicPage(pageName = "Test Page");
	}

	tearDown {
		Page.tearDownCP();
	}

	@priority = "4"
	test ChatPortletSmoke {
		property portlet.plugins.includes = "chat-portlet";
		var appName = "Chat";

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager");

		AppManager.deactivateAppCP(appName = "${appName}");

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager");

		AppManager.uninstallAppCP(appName = "${appName}");

		ProductMenu.gotoPortlet(
			category = "Apps",
			panel = "Control Panel",
			portlet = "App Manager");

		AppManager.viewUninstallAppCP(appName = "${appName}");
	}

}