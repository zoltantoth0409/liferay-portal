@component-name = "portal-plugins-deployment"
definition {

	property testray.main.component.name = "Plugin Installer";

	setUp {
		User.firstLoginPG();

		ProductMenu.gotoPortlet(
			category = "Site Builder",
			portlet = "Pages");

		SitePages.addPublicPage(pageName = "Test Page");
	}

	tearDown {
		Page.tearDownCP();
	}

	@priority = "4"
	test MailPortletSmoke {
		property portlet.plugins.includes = "mail-portlet";
		var appName = "Mail";

		Navigator.gotoPage(pageName = "Test Page");

		Portlet.addPG(portletName = "Mail");

		GlobalMenu.gotoPortlet(
			category = "System",
			panel = "Control Panel",
			portlet = "App Manager");

		AppManager.uninstallAppCP(appName = "${appName}");

		GlobalMenu.gotoPortlet(
			category = "System",
			panel = "Control Panel",
			portlet = "App Manager");

		AppManager.viewUninstallAppCP(appName = "${appName}");
	}

}