@component-name = "portal-collaboration"
definition {
	property portal.release = "true";
	property portal.upstream = "true";
	property custom.properties = "default.layout.template.id=1_column";
	property testray.main.component.name = "Mentions";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations"
		);

		User.addCP(
			userEmailAddress = "userea@liferay.com",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn"
		);

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations"
		);

		User.editPasswordCP(
			password = "password",
			userEmailAddress = "userea@liferay.com",
			userScreenName = "usersn"
		);

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations"
		);

		User.assignRegularRoleCP(roleName = "Administrator", userScreenName = "usersn");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			DMDocument.tearDownCP();

			DMFolder.tearDownCP();

			Page.tearDownPG();

			User.tearDownCP();
		}
	}

	@priority = "5"
	test ViewMentionViaDMComment {
		Page.add(pageName = "Documents and Media Page");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Portlet.addPG(portletName = "Documents and Media");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Documents and Media"
		);

		DMDocument.addCP(
			dmDocumentDescription = "DM Document Description",
			dmDocumentFile = "Document_1.txt",
			dmDocumentSize = "0KB",
			dmDocumentTitle = "DM Document Title"
		);

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "userea@liferay.com");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Click(locator1 = "Icon#DISPLAY_STYLE_DESCRIPTIVE");

		DMDocument.viewPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentTitle = "DM Document Title"
		);

		Mentions.addMentionViaComments(
			entryComment = "Comment mentioning",
			mentionsUserFullName = "Test Test",
			mentionsUserScreenName = "test"
		);

		Mentions.viewCommentMentionTagLink(
			mentionsUserFullName = "Test Test",
			mentionsUserScreenName = "test"
		);
	}

	@priority = "5"
	test ViewReplyMentionViaDMComment {
		Page.add(pageName = "Documents and Media Page");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Portlet.addPG(portletName = "Documents and Media");

		Navigator.openURL();

		ProductMenu.gotoPortlet(
			category = "Content",
			panel = "Site Administration",
			portlet = "Documents and Media"
		);

		DMDocument.addCP(
			dmDocumentDescription = "DM Document Description",
			dmDocumentFile = "Document_1.txt",
			dmDocumentSize = "0KB",
			dmDocumentTitle = "DM Document Title"
		);

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "userea@liferay.com");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Click(locator1 = "Icon#DISPLAY_STYLE_DESCRIPTIVE");

		DMDocument.viewPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentTitle = "DM Document Title"
		);

		Mentions.addMentionViaComments(
			entryComment = "Comment mentioning",
			mentionsUserFullName = "Test Test",
			mentionsUserScreenName = "test"
		);

		Mentions.viewCommentMentionTagLink(
			mentionsUserFullName = "Test Test",
			mentionsUserScreenName = "test"
		);

		User.logoutPG();

		User.loginUserPG(password = "test", userEmailAddress = "test@liferay.com");

		Navigator.gotoPage(pageName = "Documents and Media Page");

		Click(locator1 = "Icon#DISPLAY_STYLE_DESCRIPTIVE");

		DMDocument.viewPG(
			dmDocumentDescription = "DM Document Description",
			dmDocumentTitle = "DM Document Title"
		);

		var key_entryComment = "Comment mentioning";

		AssertClick(locator1 = "Comments#REPLY_TO_COMMENT", value1 = "Reply");

		Mentions.addMentionViaComments(
			entryComment = "Comment reply mentioning",
			mentionsUserFullName = "userfn userln",
			mentionsUserScreenName = "usersn"
		);

		Mentions.viewCommentMentionTagLink(
			mentionsUserFullName = "userfn userln",
			mentionsUserScreenName = "usersn"
		);
	}
}