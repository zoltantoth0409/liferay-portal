definition {

	macro setFolderId {
		if (isSet(folderName)) {
			Variables.assertDefined(parameterList = "${groupId}");

			var folderId = JSONBookmarksAPI._getFolderIdByFolderName(
				folderName = "${folderName}",
				groupId = "${groupId}");
		}
		else {
			var folderId = "0";
		}

		return "${folderId}";
	}

	macro setGroupId {
		Variables.assertDefined(parameterList = "${groupName}");

		if (!(isSet(site))) {
			var site = "true";
		}

		var groupId = JSONGroupAPI._getGroupIdByName(groupName = "${groupName}", site = "${site}");

		return "${groupId}";
	}

	macro setServiceContext {
		var serviceContext = JSONServiceContextUtil.setServiceContext(
			addGuestPermissions = "true",
			assetCategoryIds = "${assetCategoryIds}",
			assetTagNames = "${assetTagNames}",
			groupName = "${groupName}",
			site = "${site}",
			workflowAction = "${workflowAction}");

		return "${serviceContext}";
	}

}