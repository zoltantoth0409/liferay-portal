definition {

	macro editPermission {
		var portalURL = JSONCompany.getPortalURL();

		var roleId = JSONRoleAPI._getRoleIdByName(name = "${roleTitle}");

		var companyId = JSONCompany.getCompanyId();

		if ("${roleType}" == "regular") {
			var primKey = "${companyId}";
			var scope = "1";
		}
		else if (("${roleType}" == "site") || ("${roleType}" == "organization")) {
			var primKey = "0";
			var scope = "3";
		}
		else {
			fail("Invalid 'roleType', '${roleType}' must be 'regular/site/organization'.");
		}

		var groupId = JSONGroupAPI._getGroupIdByName(groupName = "${groupName}");

		var curl = '''
			${portalURL}/api/jsonws/resourcepermission/${method} \
				-u test@liferay.com:test \
				-d groupId=${groupId} \
				-d companyId=${companyId} \
				-d name=${resourceName} \
				-d scope=${scope} \
				-d primKey=${primKey} \
				-d roleId=${roleId} \
				-d actionId=${resourceAction}
		''';

		com.liferay.poshi.runner.util.JSONCurlUtil.post("${curl}");
	}

}