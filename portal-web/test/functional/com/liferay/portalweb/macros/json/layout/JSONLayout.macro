		var layoutId = JSONLayoutSetter.setLayoutId(
			groupId = "${groupId}",
			layoutName = "${layoutName}",
			privateLayout = "true");

		var typeSettings = JSONLayoutSetter.setTypeSettings(
			groupId = "${groupId}",
			layoutName = "${layoutName}",
			privateLayout = "true",
			widgetName = "${widgetName}");

		JSONLayoutAPI._updateTypeSettings(
			groupId = "${groupId}",
			layoutId = "${layoutId}",
