definition {
	macro enableSectionCustomizableCP {
		var key_columnId = "${columnId}";

		SitePageNavigator.gotoEditPage(page = "${pageName}");

		Navigator.gotoNavTab(navTab = "Advanced");

		Panel.expandPanel(panelHeading = "Customization Settings");

		Check.checkToggleSwitch(
			locator1 = "SitePagesEditPage#CUSTOMIZATION_SETTINGS_SHOW_CUSTOMIZABLE_SECTIONS"
		);

		Check.checkToggleSwitch(
			locator1 = "SitePagesEditPage#CUSTOMIZATION_SETTINGS_CUSTOMIZABLE_COLUMN"
		);

		PortletEntry.save();
	}

	macro enableSectionCustomizablePG {
		var key_columnId = "${columnId}";

		Check.checkToggleSwitch(
			locator1 = "SitePagesEditPage#CUSTOMIZATION_SETTINGS_SHOW_CUSTOMIZABLE_SECTIONS"
		);

		Check.checkToggleSwitch(
			locator1 = "SitePagesEditPage#CUSTOMIZATION_SETTINGS_CUSTOMIZABLE_COLUMN_CHECKBOX"
		);

		AssertClick.pauseAssertTextClickAt(locator1 = "Button#SAVE", value1 = "Save");

		Alert.viewSuccessMessage();
	}

	macro gotoCustomizationSettingsPG {
		Navigator.gotoNavTab(navTab = "Advanced");

		Panel.expandPanel(panelHeading = "Customization Settings");
	}

	macro gotoCustomizedPageInfo {
		Click(locator1 = "Icon#HEADER_VERTICAL_ELLIPSIS");

		if (isSet(viewDefaultPage)) {
			var key_menuItem = "View Page without my customizations";

			AssertClick(
				locator1 = "MenuItem#ANY_MENU_ITEM",
				value1 = "View Page without my customizations",
				key_menuItem = "View Page without my customizations"
			);
		}
		else {
			var key_menuItem = "Reset My Customizations";

			AssertClickNoError(
				locator1 = "MenuItem#ANY_MENU_ITEM",
				value1 = "Reset My Customizations",
				key_menuItem = "Reset My Customizations"
			);

			Confirm(
				value1 = "Are you sure you want to reset your customizations to default?"
			);
		}
	}

	macro viewCustomizablePagePG {
		Click(locator1 = "Icon#PAGE_CUSTOMIZATION_ELLIPSIS");

		AssertTextEquals.assertPartialText(
			locator1 = "Home#PAGE_CUSTOMIZATION_MESSAGE_INFO",
			value1 = "You can customize this page."
		);

		AssertTextEquals(
			locator1 = "Home#PAGE_CUSTOMIZATION_VIEW_DEFAULT_PAGE",
			value1 = "View Page without my customizations"
		);

		AssertTextEquals(
			locator1 = "Home#PAGE_CUSTOMIZATION_RESET_MY_CUSTOMIZATIONS",
			value1 = "Reset My Customizations"
		);
	}
}