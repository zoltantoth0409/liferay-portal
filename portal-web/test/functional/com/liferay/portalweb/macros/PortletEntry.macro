definition {
	macro clickMoveToRecycleBin {
		AssertClick(
			locator1 = "MenuItem#ANY_MENU_ITEM",
			value1 = "Move to the Recycle Bin",
			key_menuItem = "Move to the Recycle Bin"
		);
	}

	macro inputDescription {
		Click(locator1 = "TextArea#DESCRIPTION");

		Type(locator1 = "TextArea#DESCRIPTION", value1 = "${description}");
	}

	macro inputDescriptionTextInput {
		Click(locator1 = "TextInput#DESCRIPTION");

		Type(locator1 = "TextInput#DESCRIPTION", value1 = "${description}");
	}

	macro inputLocalizedName {
		Click(locator1 = "Language#SITE_NAME_TRANSLATION", key_language = "${language}");

		PortletEntry.inputName(name = "${localizedName}");
	}

	macro inputName {
		Click(locator1 = "TextInput#NAME");

		Type(locator1 = "TextInput#NAME", value1 = "${name}");

		if (IsElementPresent(locator1 = "TextInput#NAME_INVALID")) {
			Click(locator1 = "TextInput#NAME_MARGIN");
		}
	}

	macro inputTitle {
		Click(locator1 = "TextInput#TITLE");

		Type(locator1 = "TextInput#TITLE", value1 = "${title}");

		if (IsElementPresent(locator1 = "TextInput#TITLE_INVALID")) {
			Click(locator1 = "TextInput#TITLE_MARGIN");
		}
	}

	macro publish {
		Button.clickPublish();

		Alert.viewSuccessMessage();
	}

	macro publishAndWait {
		Button.clickPublish();

		Pause(locator1 = "3000");

		Alert.viewSuccessMessage();
	}

	macro save {
		Button.clickSave();

		Alert.viewSuccessMessage();
	}

	macro viewNoNavItemLink {
		AssertElementNotPresent(locator1 = "NavBar#NAV_ITEM_LINK");
	}
}