definition {

	macro addDate {

		/*
		To ensure the desired month will always be reached, please set the date in current year.
		*/

		var currentDateMonth = DateUtil.getCurrentMonth();
		var currentDateYear = DateUtil.getCurrentYear();

		if ("${currentDateMonth}" != "12") {
			while (IsElementNotPresent(locator1 = "YUICalendarWidget#DATEPICKER_SPECIFIC_MONTH_YEAR", key_month = "December", key_year = "${currentDateYear}")) {
				Click(locator1 = "YUICalendarWidget#NEXT_MONTH_ARROW");
			}
		}

		var key_day = "${day}";
		var key_month = "${month}";
		var key_year = "${year}";

		AssertTextEquals(
			locator1 = "YUICalendarWidget#DATEPICKER_SPECIFIC_MONTH_YEAR",
			value1 = "${month} ${year}");

		AssertClick(
			locator1 = "YUICalendarWidget#DATEPICKER_SPECIFIC_DAY",
			value1 = "${day}");
	}

}