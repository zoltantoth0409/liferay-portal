			<notification>
				<name>Report Approval</name>
				<description></description>
				<template> <![CDATA[The report you submitted has earned the Board of Governors Approval.]]> </template>
				<template-language>text</template-language>
				<notification-type>user-notification</notification-type>
				<recipients>
					<user/>
				</recipients>
				<execution-type>onEntry</execution-type>
			</notification>
		</actions>
		<transitions>
			<transition>
				<name>Approve</name>
				<target>Published</target>
				<default>true</default>
			</transition>
		</transitions>
	</join>
	<state>
		<name>Submitted</name>
		<metadata> <![CDATA[{"xy":[21,205]}]]> </metadata>
		<initial>true</initial>
