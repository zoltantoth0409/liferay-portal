<?xml version="1.0"?>

<project basedir="." default="compile" name="portal-kernel">
	<import file="../build-common-java.xml" />

	<property name="deploy.dir" value="${app.server.lib.global.dir}" />
	<property name="jar.file" value="${ant.project.name}" />
	<property name="javac.classpathref" value="web.classpath" />
	<property name="manifest.bundle.name" value="Liferay Portal Kernel" />
	<property name="manifest.bundle.symbolic.name" value="com.liferay.portal.kernel" />

	<path id="web-lib.classpath">
		<fileset
			dir="${project.dir}/lib/development"
			includes="junit.jar"
		/>
	</path>

	<target name="jar">
		<copy file="src/com/liferay/portal/kernel/util/ReleaseInfo.java" overwrite="true" tofile="build/temp/ReleaseInfo.java" />

		<replace file="src/com/liferay/portal/kernel/util/ReleaseInfo.java">
			<replacefilter token="@release.info.build@" value="${release.info.build}" />
			<replacefilter token="@release.info.date@" value="${release.info.date}" />
			<replacefilter token="@release.info.name@" value="${release.info.name}" />
			<replacefilter token="@release.info.version@" value="${release.info.version}" />
			<replacefilter token="@release.info.version.display.name@" value="${release.info.version.display.name}" />
		</replace>

		<ant antfile="${project.dir}/build-common-java.xml" dir="${project.dir}/portal-kernel" inheritRefs="true" target="jar" />

		<move file="build/temp/ReleaseInfo.java" tofile="src/com/liferay/portal/kernel/util/ReleaseInfo.java" />
	</target>
</project>